{
	"name": "@nexus-ioc/core",
	"version": "0.4.2",
	"description": "A powerful IoC container for TypeScript applications",
	"author": "Isqanderm <aleksandr.melnik.personal@gmail.com> (https://www.linkedin.com/in/isqander-melnik)",
	"homepage": "https://github.com/Isqanderm/ioc#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Isqanderm/ioc.git"
	},
	"bugs": {
		"url": "https://github.com/Isqanderm/ioc/issues"
	},
	"keywords": [
		"IoC",
		"dependency injection",
		"inversion control",
		"typescript",
		"DI",
		"framework",
		"container"
	],
	"files": ["dist", "package.json", "LICENSE", "README.md"],
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/types/index.d.ts",
				"default": "./dist/esm/index.js"
			},
			"require": {
				"types": "./dist/types/index.d.ts",
				"default": "./dist/cjs/index.js"
			}
		}
	},
	"sideEffects": false,
	"license": "MIT",
	"peerDependencies": {
		"reflect-metadata": "^0.1.12 || ^0.2.0"
	},
	"devDependencies": {
		"@nexus-ioc/testing": "^0.4.0",
		"@types/node": "^22.5.4",
		"@vitest/coverage-v8": "^3.0.0",
		"reflect-metadata": "^0.1.12 || ^0.2.0",
		"sinon": "^18.0.0",
		"typescript": "^5.9.3",
		"vite": "^7.0.0",
		"vitest": "^3.0.0"
	},
	"dependencies": {
		"@nexus-ioc/shared": "^0.4.2",
		"tslib": "^2.6.3"
	},
	"scripts": {
		"build": "npm run build:cjs && npm run build:esm",
		"build:cjs": "tsc -p tsconfig.cjs.json",
		"build:esm": "tsc -p tsconfig.esm.json && node ../../scripts/fix-esm-imports.js dist/esm && echo '{\"type\":\"module\"}' > dist/esm/package.json",
		"test": "vitest run",
		"clean": "rm -rf ./dist && rm -f tsconfig*.tsbuildinfo",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"test:memory": "vitest run --config vitest.memory.config.mts",
		"code:format": "npx @biomejs/biome format --write",
		"code:lint": "npx @biomejs/biome lint --write",
		"code:check": "npx @biomejs/biome check",
		"code:check:ci": "npx @biomejs/biome ci",
		"code:check:apply": "npx @biomejs/biome check --write",
		"test:ready": "echo 0"
	}
}
