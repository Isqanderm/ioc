{
	"name": "nexus-ioc",
	"version": "0.1.2",
	"description": "A powerful IoC container for TypeScript applications",
	"author": "Isqanderm <aleksandr.melnik.personal@gmail.com> (https://www.linkedin.com/in/isqander-melnik)",
	"homepage": "https://github.com/Isqanderm/ioc#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Isqanderm/ioc.git"
	},
	"bugs": {
		"url": "https://github.com/Isqanderm/ioc/issues"
	},
	"keywords": [
		"IoC",
		"dependency injection",
		"inversion control",
		"typescript",
		"DI",
		"framework",
		"container"
	],
	"files": [
		"dist",
		"package.json",
		"LICENSE",
		"README.md"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"license": "MIT",
	"peerDependencies": {
		"reflect-metadata": "^0.1.12 || ^0.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.7.3",
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@commitlint/prompt-cli": "^19.3.1",
		"@types/jest": "^29.5.12",
		"husky": "^9.0.11",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.7",
		"reflect-metadata": "^0.1.12 || ^0.2.0",
		"sinon": "^18.0.0",
		"standard-version": "^9.5.0",
		"ts-jest": "^29.1.4",
		"ts-node": "^10.9.2"
	},
	"dependencies": {
		"tslib": "^2.6.2",
		"uid": "^2.0.2"
	},
	"scripts": {
		"build": "tsc",
		"test": "jest",
		"clean": "rm -rf ./dist",
		"test:watch": "jest --watch",
		"code:format": "npx @biomejs/biome format --write src __test__",
		"code:lint": "npx @biomejs/biome lint --apply src __test__",
		"code:check": "npx @biomejs/biome check src __test__",
		"code:check:ci": "npx @biomejs/biome ci src",
		"code:check:apply": "npx @biomejs/biome check --apply src __test__",
		"prepare": "husky",
		"release": "standard-version",
		"changelog": "standard-version --release-as patch --skip.tag --skip.commit",
		"commit": "commit"
	},
	"lint-staged": {
		"src/**/*.{js,ts}": [
			"npx @biomejs/biome lint --apply"
		]
	}
}
